<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="email">Email</label>
  <input id="email" type="email" name="email" placeholder="JonSnow">

  <br><br>
  <label for="name">What's your name</label>
  <input id="name" type="name" name="name" placeholder="JonSnow">
  
  <br><br>
  <label for="age">How old are you </label>
  <input id="age" type="age" name="age" placeholder="JonSnow">
  
  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <button type="button" class="btn btn-outline-primary">Signup</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
