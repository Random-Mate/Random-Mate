<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 Edit your profile</h1> </div> <div class="col-md-6">

        <form action="/profile/edit?id={{user._id}}" method="POST" id="form-container">
          {{#with user}}
          <div class='form-group'>
            <label for='input2'>Profile picture</label>
            <input name='photo' type='file' id='input2'>
          </div>

          <div class="form-group">
            <label for="name-input">Name</label>
            <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
          </div>
          <div class="form-group">
            <label for="age-input">Age</label>
            <input name="age" type="number" class="form-control" id="age-input"
              value="{{age}}">
          </div>
          <div class="form-group">
            <label for="description-input">Description</label>
            <input name="description" type="text" class="form-control" id="description-input"
              value="{{description}}">
          </div>
          
        {{/with}}

          <button type="submit" class="btn btn-dark">Guardar edici√≥n</button>
          <a href="/" class="btn btn-dark">Volver</a>

        </form>
    </div>

  </div>
</div>