  <div class="backProfile">
    <div class="container">
      <div class="row">



        <div class="col-md-5 login-screenP ">
          <h1 class="prof">Edit your profile</h1>

          <form action="/profile/edit" method="POST" id="form-container" enctype="multipart/form-data">
            {{#with prof}}
            <div class='form-group'>
              <label for='input2'>Profile picture</label>
              <input name='imgPath' type='file' id='input2'>


              <div class="form-group">
                <label for="name-input">Nombre:</label>
                <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
              </div>
              <div class="form-group">
                <label for="name-input">Apellido:</label>
                <input name="last name" type="text" class="form-control" id="lastname-input" value="{{lastName}}">
              </div>
              <div class="form-group">
                <label for="name-input">Ubicación:</label>
                <input name="ubication" type="text" class="form-control" id="ubication-input" value="{{ubication}}">
              </div>
              <div class="form-group">
                <label for="age-input">Edad:</label>
                <input name="age" type="number" class="form-control" id="age-input" value="{{age}}">
              </div>
              <div class="form-group">
                <label for="age-input">email:</label>
                <input name="email" type="text" class="form-control" id="email-input" value="{{email}}">
              </div>
              <div class="form-group description">
                <label for="description-input">Descripción:</label>
                <input name="description" type="text" class="form-control" id="description-input" value="{{description}}">
              </div>
            </div>

            {{/with}}
            {{!-- {{#each users}}
          <option value="{{_id}}">{{name}}</option>
          {{/each}}  --}}
          <div class="button-flex">
          <button type="submit" class="btn">Guardar</button>
      
          </form>
            <a href="/profile" class="btn">Volver</a>
            </div>
        </div>

      </div>
        
    </div>
    